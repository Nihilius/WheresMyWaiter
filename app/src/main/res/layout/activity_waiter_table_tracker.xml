<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.db.bv.bignerdranch.android.wheresmywaiter.WaiterTableTracker">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Create Table or Choose an existing one."
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/newTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTableNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter Table Number"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/CreateTableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Table" />
    </LinearLayout>

    <ListView
        android:id="@+id/ListViewTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/newTableLayout" />
</RelativeLayout>
